# General Configuration
PORT=5000                     # Backend server port

# Database Configuration
DB_HOST=localhost             # Database host
DB_PORT=5432                  # Database port
DB_USER=your_db_username      # Database username
DB_PASSWORD=your_db_password  # Database password
DB_NAME=current_glimpse       # Database name

# JWT Configuration (if using authentication)
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRES_IN=1h             # Token expiration time

# Blockchain Configuration
BLOCKCHAIN_API_URL=https://blockchain.example.com
BLOCKCHAIN_API_KEY=your_blockchain_api_key

# Logging Configuration
LOG_LEVEL=debug               # Logging level (debug, info, error)
LOG_FILE_PATH=./logs/app.log  # Path for log file

# API Keys (if applicable)
NEWS_API_KEY=your_news_api_key  # API key for fetching news
ANALYTICS_API_KEY=your_analytics_api_key

# CORS Configuration
CORS_ORIGIN=http://localhost:3000  # Frontend URL for local development